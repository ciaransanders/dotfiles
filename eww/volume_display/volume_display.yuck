(defvar volume 0)
(defvar volume_reveal false)

(defwidget volume_widget []
  (box :class "volume_widget" :orientation "vertical"
    ; (label :text "Volume: ${volume}%")
    (progress :orientation "horizontal" :value volume)
  )
)

(defwindow volume_popup
  :stacking "fg"
  :wm-ignore true
  :geometry (geometry :y "15%" :anchor "bottom center")
    (volume_widget)
)
